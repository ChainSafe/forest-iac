auth_enabled: false

server:
  http_listen_port: {{ loki_config_http_port }}
  grpc_listen_port: 9095

ingester:
  lifecycler:
    address: 127.0.0.1
    ring:
      kvstore:
        store: inmemory
      replication_factor: 1
    final_sleep: 0s
  chunk_idle_period: {{ loki_ingester_chunk_idle_period }}
  chunk_retain_period: 30s
  max_transfer_retries: 0

schema_config:
  configs:
  - from: {{ loki_from_date }}
    store: boltdb-shipper
    object_store: s3
    schema: {{ loki_schema_version }}
    index:
      prefix: index_
      period: 24h

storage_config:
  boltdb_shipper:
    active_index_directory: /tmp/loki/index
    cache_location: /tmp/loki/index_cache
    resync_interval: 5s
    shared_store: s3

compactor:
  compaction_interval: 5m
  retention_enabled: true
  working_directory: /tmp/loki/compactor
  shared_store: s3

limits_config:
  enforce_metric_name: false
  reject_old_samples: true
  reject_old_samples_max_age: {{ loki_config_period }}

chunk_store_config:
  max_look_back_period: {{ loki_config_retention }}

table_manager:
  retention_deletes_enabled: true
  retention_period: {{ loki_config_retention }}

common:
  path_prefix: /loki
  storage:
    s3:
      endpoint: {{ spaces_endpoint }}
      bucketnames: {{ spaces_bucket_name}}
      region: {{ spaces_region }}
      access_key_id: {{ spaces_access_token }}
      secret_access_key: {{ spaces_secret_key }}

ruler:
  alertmanager_url: http://alertmanager:9093
