    {
      "name": "Overview",
      "description": null,
      "widgets": [
        {
          "title": "Head Epoch",
          "layout": {
            "column": 1,
            "row": 1,
            "width": 6,
            "height": 3
          },
          "linkedEntityGuids": null,
          "visualization": {
            "id": "viz.billboard"
          },
          "rawConfiguration": {
            "facet": {
              "showOtherSeries": false
            },
            "nrqlQueries": [
              {
                "accountIds": [
                  "${account_id}"
                ],
                "query": "SELECT latest(head_epoch) FROM Metric WHERE clusterName = '${name}' SINCE 1 minutes ago"
              }
            ],
            "platformOptions": {
              "ignoreTimeRange": false
            }
          }
        },
        {
          "title": "",
          "layout": {
            "column": 7,
            "row": 1,
            "width": 6,
            "height": 3
          },
